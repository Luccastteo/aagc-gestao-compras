{
  "name": "aagc-saas",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --filter=!appsdesktop",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "db:migrate": "pnpm -C apps/api prisma migrate deploy",
    "db:migrate:dev": "pnpm -C apps/api prisma migrate dev --skip-generate",
    "db:generate": "cd apps/api && pnpm prisma generate",
    "db:seed": "cd apps/api && pnpm prisma db seed",
    "db:studio": "cd apps/api && pnpm prisma studio",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "desktop:dev": "pnpm -C apps/desktop tauri dev",
    "desktop:build": "pnpm -C apps/desktop tauri build",
    "start": "turbo run start",
    "test": "pnpm test:api && pnpm test:web",
    "test:api": "pnpm -C apps/api test",
    "test:web": "pnpm -C apps/web test",
    "test:e2e": "pnpm -C apps/web test && pnpm -C apps/api test"
  },
  "devDependencies": {
    "turbo": "^2.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
