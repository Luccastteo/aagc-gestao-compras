# ========== DATABASE ==========
DATABASE_URL="postgresql://aagc:aagc_dev_password@localhost:5432/aagc_db?schema=public"
REDIS_URL="redis://localhost:6379"

# ========== WORKER CONFIG ==========
NODE_ENV=development

# ========== AUTO PO GENERATION ==========
# Enable/disable auto PO generation (default: true)
AUTO_PO_ENABLED=true

# Window hours for dedupe (default: 6)
# One AUTO PO per (org, supplier) per window
AUTO_PO_WINDOW_HOURS=6

# DEV interval in seconds (default: 60)
# How often the auto PO job runs in development mode
AUTO_PO_DEV_INTERVAL_SEC=60

# Skip auto PO if manual DRAFT exists within N minutes (default: 60)
AUTO_PO_SKIP_IF_MANUAL_DRAFT_MIN=60

# ========== ML DATA COLLECTION ==========
# Enable/disable ML data collection (default: true)
ML_DATA_COLLECTION_ENABLED=true

# ========== AI CONFIGURATION ==========
# OpenAI API Key para LLM e embeddings
OPENAI_API_KEY=sk-your-openai-api-key-here
# Modelo OpenAI (gpt-4-turbo-preview, gpt-4, gpt-3.5-turbo)
OPENAI_MODEL=gpt-4-turbo-preview
# URL do servi√ßo ML (FastAPI)
ML_SERVICE_URL=http://localhost:8001
